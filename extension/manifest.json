{
  "manifest_version": 3,
  "name": "Knowledge Engine",
  "description": "Capture articles and PDFs to your Obsidian knowledge vault with AI-powered insight extraction",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Knowledge Engine"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8284/*",
    "http://127.0.0.1:8284/*"
  ]
}
